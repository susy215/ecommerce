# Rename this file to .env and fill values (never commit real secrets)

# Django
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DB_NAME=smartsales_db
DB_USER=postgres
DB_PASSWORD=yourpassword
DB_HOST=localhost
DB_PORT=5432

# CORS/CSRF (adjust for your frontend URL)
CORS_ALLOWED_ORIGINS=http://localhost:5173
CSRF_TRUSTED_ORIGINS=http://localhost:5173
FRONTEND_URL=http://localhost:5173

# Stripe (test keys)
# Usa la clave secreta para el servidor (sk_...). No uses la publishable (pk_...) aquí.
STRIPE_SECRET_KEY=sk_test_...
# (Opcional) Publishable key para el frontend, si la necesitas exponer.
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_CURRENCY=usd

# Compatibilidad (antiguo): si solo defines STRIPE_API_KEY, el servidor lo usará como secreto
# STRIPE_API_KEY=sk_test_...
